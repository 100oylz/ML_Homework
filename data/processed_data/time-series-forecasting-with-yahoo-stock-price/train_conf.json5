{
  // ==================== 训练基本参数 ====================
  epochs: 300,                  // 最大训练轮数
  batch_size: 64,               // 批次大小
  learning_rate: 0.001,         // 初始学习率（Adam 默认推荐 0.001）
  optimizer: "Adam",            // 优化器：Adam 或 SGD
  loss: "MSE",                  // 损失函数：MSE（回归任务）或 MAE

  // ==================== 模型结构参数 ====================
  input_size: null,             // 自动推断
  hidden_size: 64,              // 隐藏层神经元数量
  num_layers: 4,                // RNN/LSTM/GRU 层数
  output_size: 2,               // 输出特征维度
  dropout: 0.3,                 // Dropout 概率

  // ==================== 时序窗口参数 ====================
  window_size: 64,              // 输入序列长度

  // ==================== 早停与监控 ====================
  early_stopping_patience: 20,  // 验证损失连续多少轮不下降就早停

  // ==================== 其他可选参数 ====================
  seed: 42,                     // 随机种子，确保可复现
  device: "cuda",               // 训练设备：cuda 或 cpu（自动检测）
  checkpoint_dir: "./checkpoint" // 模型权重保存目录
}
